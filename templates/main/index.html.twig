{% extends 'base.html.twig' %}

{% block title %}sneaky{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Liste des Articles</h1>
<div class="container d-flex justify-content-between  flex-wrap">
    <div class="row">

        {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ article.img }}" class="card-img-top" alt="{{ article.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text">
                            <strong>Prix :</strong> {{ article.price }} €<br>
                            <strong>Marque :</strong> {{ article.brand }}<br>
                            {{ article.detail|slice(0, 100) ~ '...' }}
                        </p>
                        <a href="#" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun article trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}