{% extends 'base.html.twig' %}

{% block title %}sneaky{% endblock %}

{% block body %}

    
<div class="bg-primary text-white text-center py-5 mb-5 mt-5">
    <h1>Bienvenu dans notre boutique</h1>
    <p>Votre Meilleur Choix Pour Meilleur Chaussures</p>
    <div >
        <a href="{{ path('app_login') }}"> <button class="btn btn-light btn-lg ">connexion</button> </a>
        <a href="{{ path('app_register') }}"> <button class="btn btn-light btn-lg m-sm-4">inscription</button> </a>
    </div>
</div>

<h1 class="text-center mb-4 pt-5">Liste des Articles</h1>
<div class="container d-flex justify-content-between flex-wrap">
    <div class="row">
        {% for article in articles|slice(0, 6) %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ article.img }}" class="card-img-top" alt="{{ article.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text">
                            <strong>Prix :</strong> {{ article.price }} €<br>
                            <strong>Marque :</strong> {{ article.brand }}<br>
                            {{ article.detail|slice(0, 100) ~ '...' }}
                        </p>
                        <a href="#" class="btn btn-outline-success">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun article trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>

<!--ligne horizontale  -->
<hr class="border-primary">
<div class="text-center">
    <button class="btn btn-lg btn-info"> voir les produits</button>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Contact Us</h2>
    <form id="contactForm">
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Your Name" required>
            </div>
            <div class="col-md-6">
                <input type="email" class="form-control" placeholder="Your Email" required>
            </div>
        </div>
        <div class="mb-3">
            <textarea class="form-control" rows="5" placeholder="Your Message" required></textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Send Message</button>
        </div>
    </form>
</div>

{% endblock %}