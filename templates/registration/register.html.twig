{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header text-center">
            <h1>Inscription</h1>
        </div>
        <div class="card-body">
            <form method="post" novalidate>
                {{ form_start(registrationForm) }}

                <fieldset class="mb-4">
                    <legend class="text-center">Tes coordonn√©es</legend>
                    <div class="form-group">
                        {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.ville, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.postcode, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </fieldset>

                <fieldset class="mb-4">
                    <legend class="text-center">Ton compte</legend>
                    <div class="form-group">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                </fieldset>

                <div class="form-check mb-4">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                </div>

                <button type="submit" class="btn btn-primary btn-block">Inscription</button>

                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
